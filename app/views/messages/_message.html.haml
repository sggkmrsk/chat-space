.messages__message
  .messages__message--name 
    = message.user.name
  .messages__message--date
    = message.created_at.strftime("%Y/%m/%d %H:%M")
  .messages__message--text
    - if message.body.present?
      %p.messages__message--text
        = message.body
      = image_tag message.image.url, class: 'lmessages__message--image' if message.image.present?