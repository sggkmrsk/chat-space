.messages__message{data: {message_id: message.id}}
  .messages__message--name
    = message.user.name
  .messages__message--date
    = message.created_at.strftime("%Y/%m/%d %H:%M")
  - if message.body.present?
    %p.messages__message--text
      = message.body
  = image_tag message.image.url, class: 'messages__message--image' if message.image.present?